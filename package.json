  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@ava/typescript": "^1.1.1",
    "ava": "^3.7.1",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  }
}
