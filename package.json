{
  "name": "ts-npm-workflow",
  "version": "0.1.0",
  "description": "npm workflow for function package",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib/* && tsc -d --project tsconfig.json --outDir ./lib/",
