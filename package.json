{
  "name": "ts-npm-workflow",
  "version": "0.1.0",
  "description": "npm workflow for function package",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "esm/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf ./lib/* ./esm/* && yarn build:cjs && yarn build:es",
    "build:cjs": "tsc",
    "build:es": "tsc -m ESNext --outDir ./esm",
    "build:test": "rm -rf ./build/* && tsc --project tsconfig.test.json --outDir ./build",
    "test": "yarn build:test && ava",
    "lint": "eslint .",
    "prettier": "prettier --write '**/*' --config ./.prettierrc",
    "prepare": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wangcch/ts-npm-workflow.git"
  },
  "keywords": [
    "workflow",
    "npm",
    "typescript",
    "function",
    "template"
  ],
  "author": "wangcch <wangcch.cc@gmail.com>",
  "license": "MIT",
  "files": [
    "esm",
    "lib"
  ],
  "dependencies": {},
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@ava/typescript": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "ava": "^3.12.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
